{% extends 'base.html.twig' %}

{% block title %}
    Figure : {{ trick.name }}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a
                    href="{{ path('trick_category',{'slug':trick.category.slug}) }}">{{ trick.category.name }}</a></li>
        <li class="breadcrumb-item active">{{ trick.name }}</li>
    </ol>
    <h1>Figure : {{ trick.name }}</h1>
    <div class="row">
        <div class="col-4">

            <img src="/{{ trick.picture }}" class="img-fluid" alt="Image de {{ trick.name }}">
        </div>
        <div class="col">
            <span class="badge badge-primary">{{ trick.category.name }}</span>
            <p> {{ trick.description }}</p>
        </div>
    </div>

{% endblock %}